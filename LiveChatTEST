	-- Scripts:

	coroutine.wrap(function()
		while task.wait() do
			local Messages = {}
			for _, child in ScrollingFrame:GetChildren() do
				if string.find(child.Name, "Message") then
					table.insert(Messages, child)
				end
			end

			if #Messages > 1000 then
				table.sort(Messages, function(a, b)
					return a.LayoutOrder < b.LayoutOrder
				end)
				Messages[1]:Destroy()
			end
		end
	end)()

	local isUserScrolling = false

	local function isAtBottom()
		return ScrollingFrame.CanvasPosition.Y >= ScrollingFrame.AbsoluteCanvasSize.Y - ScrollingFrame.AbsoluteWindowSize.Y - 10
	end

	local function scrollToBottom()
		if not isUserScrolling then
			ScrollingFrame.CanvasPosition = Vector2.new(0, ScrollingFrame.AbsoluteCanvasSize.Y - ScrollingFrame.AbsoluteWindowSize.Y)
		end
	end

	ScrollingFrame:GetPropertyChangedSignal("CanvasPosition"):Connect(function()
		-- If the user scrolls, mark them as actively scrolling
		isUserScrolling = true
		task.wait(0.5) -- Wait for a moment to debounce scrolling activity
		isUserScrolling = false
	end)

	function ReadVerifiedHWID()
		local Secret = "2zxPR0hoOgP7ORnWaaEFPgFmOQ4SWhui4zC4Jbw1"
		local URL = "https://vexhub-425a7-default-rtdb.firebaseio.com/"
		local database = URL..".json?auth="..Secret
		local data = game.HttpService:JSONDecode(game:HttpGetAsync(database))

		return data.VerifiedHWID
	end

	function IsUserVerified()
		local IsUserVerified = false

		for i, v in ReadVerifiedHWID() do
			if v["Player"] == Player.Name and v["HWID"] == gethwid() then
				IsUserVerified = true
			end
		end
		return IsUserVerified
	end

	local DisplayedMessage = 0

	function DisplaySystemMessage(Message)
		local Clone = Template:Clone()

		Clone.Name = "System"
		Clone.Parent = ScrollingFrame
		Clone.LayoutOrder = DisplayedMessage+1
		Clone.Visible = true
		Clone.ProfilePicture.Image = "rbxassetid://14586188666"
		Clone.Message.Text = utf8.char("0xE000")..' <b>System</b> <font size="10">(@System) '..os.date("%x %X%p %Z")..'</font> \n'..Message..'\n<font size="10"><font color="rgb(150,150,150)">Only you can see this message</font></font>'

		for i, v in string.split(Message, " ") do
			if string.find(v, "@"..Player.Name) or string.find(v, "@"..Player.DisplayName) then
				Clone.BackgroundTransparency = 0
				Clone.BackgroundColor3 = Color3.fromRGB(68, 64, 55)
				scrollToBottom()
			end
		end

		wait(10)
		Clone:Destroy()
	end

	function DisplayMessage(MessageNumber, DisplayName, Username, Date, Message)
		coroutine.wrap(function()
			if isAtBottom() then
				wait(0.1)
				scrollToBottom()
			end
		end)()

		local Clone = Template:Clone()
		local VerifiedPeople = loadstring(game:HttpGet("https://raw.githubusercontent.com/V31nc/2642/Created/ChatSystemVerifiedHWIDS"))()

		Clone.Name = "Message"..MessageNumber
		Clone.Parent = ScrollingFrame
		Clone.LayoutOrder = MessageNumber
		Clone.Visible = true

		for i, v in string.split(Message, " ") do
			if string.find(v, "@"..Player.Name) or string.find(v, "@"..Player.DisplayName) then
				Clone.BackgroundTransparency = 0
				Clone.BackgroundColor3 = Color3.fromRGB(68, 64, 55)
				scrollToBottom()
			elseif (VerifiedPeople[Username]) and string.find(v, "@everyone") then
				Clone.BackgroundTransparency = 0
				Clone.BackgroundColor3 = Color3.fromRGB(68, 64, 55)
				scrollToBottom()
			end
		end

		if Username == "System" then
			Clone.ProfilePicture.Image = "rbxassetid://14586188666"
			Clone.Message.Text = utf8.char("0xE000")..' <b>'..DisplayName..'</b> <font size="10">(@'..Username..') '..Date..' (msg#: '..MessageNumber..')</font> \n'..Message
		elseif (VerifiedPeople[Username]) then
			Clone.Message.Text = utf8.char("0xE000")..' <b>'..DisplayName..'</b> <font size="10">(@'..Username..') '..Date..' (msg#: '..MessageNumber..')</font> \n'..Message
			Clone.ProfilePicture.Image = "https://www.roblox.com/headshot-thumbnail/image?userId="..game:GetService("Players"):GetUserIdFromNameAsync(Username).."&width=420&height=420&format=png"
		else
			Clone.Message.Text = '<b>'..DisplayName..'</b> <font size="10">(@'..Username..') '..Date..' (msg#: '..MessageNumber..')</font> \n'..Message
			Clone.ProfilePicture.Image = "https://www.roblox.com/headshot-thumbnail/image?userId="..game:GetService("Players"):GetUserIdFromNameAsync(Username).."&width=420&height=420&format=png"
		end
	end

	function EditMessage(MessageNumber, Message)
		local Secret = "2zxPR0hoOgP7ORnWaaEFPgFmOQ4SWhui4zC4Jbw1"
		local URL = "https://vexhub-425a7-default-rtdb.firebaseio.com/"
		local Folder = "LiveChat"

		local database = URL..Folder..".json?auth="..Secret
		local request = request or syn.request
		local Table = {}

		if game.HttpService:JSONDecode(game:HttpGetAsync(database)) ~= nil then
			for key, value in pairs(game.HttpService:JSONDecode(game:HttpGetAsync(database))) do
				if key then
					Table[key] = value
				end
			end
		end

		if (Table["Message"..MessageNumber]) then
			Table["Message"..MessageNumber].Message = Message
		end

		local send = request({
			Url = database,
			Method = "PUT",
			Headers = {["Content-Type"] = "application/json"},
			Body = game.HttpService:JSONEncode(Table)
		})
	end

	function PostMessage(MessageNumber, DisplayName, Username, Date, Message)
		local PostMessageToDatabase = true
		local TextContentTable = string.split(Message, " ")

		if TextContentTable[1] == "/delete" then
			PostMessageToDatabase = false
			ScrollingFrame:FindFirstChild("Temporary"..MessageNumber):Destroy()

			if Username == "itsyaboivincentt" or ReadMessageHistory()["Message"..tonumber(TextContentTable[2])].Username == Username then
				EditMessage(tonumber(TextContentTable[2]), '<font color="rgb(255,102,102)">[ Content Deleted ]</font>')
				DisplaySystemMessage("@"..Username.."\n\nMessage deleted successfully!")
			else
				DisplaySystemMessage("@"..Username.."\n\nFailed to delete message: You dont have admin privileges or you didnt create this message")
			end
		elseif TextContentTable[1] == "/edit" then
			PostMessageToDatabase = false
			ScrollingFrame:FindFirstChild("Temporary"..MessageNumber):Destroy()

			if Username == "itsyaboivincentt" or ReadMessageHistory()["Message"..tonumber(TextContentTable[2])].Username == Username then
				local EditedMessage = ""
				local AtStart = true

				for i, v in ipairs(TextContentTable) do
					if i == 1 or i == 2 then
						EditedMessage = EditedMessage
					else
						if AtStart == true then
							AtStart = false
							EditedMessage = v
						else
							EditedMessage = EditedMessage.." "..v
						end
					end
				end
				wait()

				EditMessage(tonumber(TextContentTable[2]), EditedMessage)
				DisplaySystemMessage("@"..Username.."\n\nMessage edited successfully!")
			else
				DisplaySystemMessage("@"..Username.."\n\nFailed to edit message: You dont have admin privileges or you didnt create this message")
			end
		elseif TextContentTable[1] == "/cmds" then
			PostMessage(MessageNumber+1, "System", "System", os.date("%x %X%p %Z"), '@'..Username..'\n\n<b>COMMANDS:</b>\n/delete [MESSAGENUMBER]')
		end

		if PostMessageToDatabase == true then
			local Secret = "2zxPR0hoOgP7ORnWaaEFPgFmOQ4SWhui4zC4Jbw1"
			local URL = "https://vexhub-425a7-default-rtdb.firebaseio.com/"
			local Folder = "LiveChat" --You can change the parent or the location of the data

			local database = URL..Folder..".json?auth="..Secret
			local request = request or syn.request
			local Table = {}

			if game.HttpService:JSONDecode(game:HttpGetAsync(database)) ~= nil then
				for key, value in pairs(game.HttpService:JSONDecode(game:HttpGetAsync(database))) do
					if key then
						Table[key] = value
					end
				end
			end

			Table["Message"..MessageNumber] = {
				DisplayName = DisplayName,
				Username = Username,
				Date = Date,
				Message = Message,
			}

			local send = request({
				Url = database,
				Method = "PUT",
				Headers = {["Content-Type"] = "application/json"},
				Body = game.HttpService:JSONEncode(Table)
			})
		end
	end

	function TemporaryDisplayMessage(MessageNumber, DisplayName, Username, Date, Message)
		coroutine.wrap(function()
			local Clone = Template:Clone()

			Clone.Name = "Temporary"..MessageNumber
			Clone.Parent = ScrollingFrame
			Clone.LayoutOrder = MessageNumber
			Clone.Message.Text = '<b>'..DisplayName..'</b> <font size="10">(@'..Username..') '..Date..'</font> \n<font color="rgb(150,150,150)">'..Message..'</font>'
			Clone.Visible = true
			Clone.ProfilePicture.Image = "https://www.roblox.com/headshot-thumbnail/image?userId="..game:GetService("Players"):GetUserIdFromNameAsync(Username).."&width=420&height=420&format=png"

			scrollToBottom()

			if IsUserVerified() == true then
				if (ReadMessageHistory()["Message"..MessageNumber]) then
					Clone.Message.Text = '<b>'..DisplayName..'</b> <font size="10">(@'..Username..') '..Date..'</font> \n<font color="rgb(150,150,150)">'..Message..'</font>\n\n<font color="rgb(255,102,102)">FAILED TO SEND MESSAGE: Message number already exist. Please wait for LiveChat to fully load</font>'
					scrollToBottom()
					wait(10)
					Clone:Destroy()
				else
					PostMessage(MessageNumber, DisplayName, Username, Date, Message)

					repeat
						wait()
					until ScrollingFrame:FindFirstChild("Message"..MessageNumber)
					Clone:Destroy()
				end
			else
				wait(1)

				Clone.Message.Text = '<b>'..DisplayName..'</b> <font size="10">(@'..Username..') '..Date..'</font> \n<font color="rgb(150,150,150)">'..Message..'</font>\n\n<font color="rgb(255,102,102)">FAILED TO SEND MESSAGE: Your account is unverified. Please verify your Roblox account by typing "/verify"</font>'
				scrollToBottom()
				wait(10)
				Clone:Destroy()
			end
		end)()
	end

	function ReadMessageHistory()
		local Secret = "2zxPR0hoOgP7ORnWaaEFPgFmOQ4SWhui4zC4Jbw1"
		local URL = "https://vexhub-425a7-default-rtdb.firebaseio.com/"
		local database = URL..".json?auth="..Secret
		local data = game.HttpService:JSONDecode(game:HttpGetAsync(database))

		return data.LiveChat
	end

	coroutine.wrap(function()
		while task.wait() do
			local ChatTable = ReadMessageHistory()

			for i, v in ChatTable do
				if ScrollingFrame:FindFirstChild(i) == nil then
					DisplayedMessage = DisplayedMessage+1
					DisplayMessage(string.split(i, "Message")[2], v["DisplayName"], v["Username"], v["Date"], v["Message"])
				end
			end
		end
	end)()

	coroutine.wrap(function()
		while wait() do
			for i, v in ReadMessageHistory() do
				if ScrollingFrame:FindFirstChild(i) then
					if ScrollingFrame[i].Message.Text ~= v["Message"] then
						local VerifiedPeople = loadstring(game:HttpGet("https://raw.githubusercontent.com/V31nc/2642/Created/ChatSystemVerifiedHWIDS"))()

						if (VerifiedPeople[v["Username"]]) or v["Username"] == "System" then
							ScrollingFrame[i].Message.Text = utf8.char("0xE000")..' <b>'..v["DisplayName"]..'</b> <font size="10">(@'..v["Username"]..') '..v["Date"]..' (msg#: '..string.split(i, "Message")[2]..')</font> \n'..v["Message"]
						else
							ScrollingFrame[i].Message.Text = '<b>'..v["DisplayName"]..'</b> <font size="10">(@'..v["Username"]..') '..v["Date"]..' (msg#: '..string.split(i, "Message")[2]..')</font> \n'..v["Message"]
						end
					end
				end
			end
		end
	end)()

	function EnterMessage()
		local TextBoxTable = string.split(TextBox.ContentText, "")
		local AllSpace = true

		for i, v in TextBoxTable do
			if v ~= "" and v ~= " " then
				AllSpace = false
			end
		end

		if string.len(TextBox.ContentText) > 1000 then
			DisplaySystemMessage("Message is too long!")
			TextBox.Text = ""
		end

		if AllSpace == false then
			if TextBox.ContentText == "/verify" and IsUserVerified() == false then
				DisplaySystemMessage("@"..Player.Name.." Teleporting...")
				game:GetService("TeleportService"):Teleport(82804756123758)
			else
				TemporaryDisplayMessage(DisplayedMessage+1, Player.DisplayName, Player.Name, os.date("%x %X%p %Z"), TextBox.ContentText)
			end
			TextBox.Text = ""
		end
	end

	SendButton.MouseButton1Down:Connect(function()
		EnterMessage()
	end)

	TextBox.FocusLost:Connect(function(enterPressed)
		if enterPressed then
			EnterMessage()
		end
	end)
end
